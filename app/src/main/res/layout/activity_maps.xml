<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.admin.MapsActivity" >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <Switch
        android:id="@+id/maps_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:text="Simpan ke Database?"/>

    <TextView
        android:id="@+id/maps_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#45000000"
        android:layout_below="@+id/maps_switch"
        android:padding="10dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Name"/>

    <TextView
        android:id="@+id/maps_kordinat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#45000000"
        android:padding="5dp"
        android:layout_below="@+id/maps_name"
        android:textColor="#CDFFFFFF"
        android:textStyle="italic"
        android:text="Kordinat"/>

    <TextView
        android:id="@+id/maps_kordinat2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#45000000"
        android:padding="5dp"
        android:layout_below="@+id/maps_kordinat"
        android:textColor="#CDFFFFFF"
        android:textStyle="italic"
        android:text="Kordinat2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_hybrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/input_text"
            android:fontFamily="@font/cocon"
            android:textColor="#2196F3"
            android:text="Hybrid"/>

        <Button
            android:id="@+id/btn_satelit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/input_text"
            android:fontFamily="@font/cocon"
            android:textColor="#2196F3"
            android:text="Satelit"/>

        <Button
            android:id="@+id/btn_terrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/input_text"
            android:fontFamily="@font/cocon"
            android:textColor="#2196F3"
            android:text="Terrain"/>

        <Button
            android:id="@+id/btn_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/input_text"
            android:fontFamily="@font/cocon"
            android:textColor="#2196F3"
            android:text="Normal"/>
    </LinearLayout>
</RelativeLayout>